Функция СравнитьДанные(Номенклатура,Реквизит,Значение)
	флаг=Ложь;
	Если Не ЗначениеЗаполнено(Номенклатура) Тогда
		Возврат Флаг;
	КонецЕсли;
	
	Если Реквизит = "флТехХарактеристика" Тогда
		Если Номенклатура.пр_ТехническиеХарактеристики=Значение тогда
			флаг = Истина;
		КонецЕсли;
	ИначеЕсли Реквизит = "флКодОборудования" Тогда
		Если Номенклатура.Артикул=Значение тогда
			флаг = Истина;
		КонецЕсли;
	ИначеЕсли Реквизит = "флНаименование" Тогда
		Если Номенклатура.Наименование=Значение тогда
			флаг = Истина;
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат флаг;
КонецФункции



&НаСервере
Процедура ЗаписатьДокумент(ДанныеСтроки,ДанныеСтрокиТЧтовар)
	
	
	Артикул="";
	ДанныеСтрокиТЧтовар.Свойство("КодОборудования",Артикул);
	Номенклатура = НайтиНоменклатуру(Артикул);
	ДанныеСтрокиТЧтовар.Вставить("Номенклатура",Номенклатура);
	
	
	
	НомерЗаявки="";
	АртикулЗаполнен = ДанныеСтроки.Свойство("Номер",НомерЗаявки);
	ДатаОбращения="";
	АртикулЗаполнен = ДанныеСтроки.Свойство("ДатаОбращения",ДатаОбращения);
	
	
	док = Документы.пр_Согласование.НайтиПоНомеру(НомерЗаявки,ДатаОбращения);
	
	Если Не ЗначениеЗаполнено(док) Тогда
		док = Документы.пр_Согласование.СоздатьДокумент();
	Иначе 
		док = док.ПолучитьОбъект();	
	КонецЕсли;
	
	Если Не ЗначениеЗаполнено(док.Состояние) Тогда 
		ДанныеСтроки.Вставить("Состояние",Перечисления.СтатусыСогласований.НеСогласован);
	КонецЕсли;
	
	
	ЗаполнитьЗначенияСвойств(док, ДанныеСтроки);
	
	
	Строки = док.Товары.НайтиСтроки(Новый Структура("КодОборудования,Номенклатура",Артикул,Номенклатура));
	Если Строки.Количество() > 0 Тогда
		СтрокаТовары = Строки[0];
	Иначе
		СтрокаТовары = док.Товары.Добавить();
	КонецЕсли;
	
	ЗаполнитьЗначенияСвойств(СтрокаТовары, ДанныеСтрокиТЧтовар);
	
	
	
	//ПараметрыЗаписи = Новый Структура;
	//ПараметрыЗаписи.Вставить("РежимЗаписи", РежимЗаписиДокумента.Запись);
	//ЭтаФорма.Записать(ПараметрыЗаписи);
	док.Записать(РежимЗаписиДокумента.Проведение);				
	Сообщить(СокрЛП(док)+" - загружен.");
	
КонецПроцедуры



